{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "ignoreDeprecations": "6.0"
  },
  "include": ["Backend/**/*.js", "Frontend/**/*.js"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "build",
    "**/*.png",
    "**/*.jpg",
    "**/*.jpeg",
    "**/*.gif",
    "**/*.svg",
    "**/*.ico",
    "**/*.webp",
    "assets/**/*"
  ]
}
